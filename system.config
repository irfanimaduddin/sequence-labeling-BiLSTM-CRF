### use # to comment out the configure item

################ Status ################
mode=train
# string: train/test/interactive_predict/api_service

################ Datasets(Input/Output) ################
datasets_fold=data/example_datasets5
train_file=train.csv
dev_file=dev.csv
test_file=test.csv

delimiter=b
# string: (t: "\t";"table")|(b: "backspace";" ")|(other, e.g., '|||', ...)

use_pretrained_embedding=False
token_emb_dir=data/example_datasets5/word.emb

vocabs_dir=data/example_datasets5/vocabs

log_dir=data/example_datasets5/logs

checkpoints_dir=checkpoints/BILSTM-CRFs-datasets5

################ Labeling Scheme ################
label_scheme=BIO
# string: BIO/BIESO

label_level=2
# int, 1:BIO/BIESO; 2:BIO/BIESO + suffix
# max to 2

hyphen=-
# string: -|_, for connecting the prefix and suffix: `B_PER', `I_LOC'

suffix=[AGE,APERTURE,AUTHOR,BATTERY,BRAND,CAMERA,CAPACITY,CARAT,CHARGE,CLASS,COLOR,CPU,CURRENT,DIMENSION,DISPLAY,FLAVOR,FLAVOUR,FRAGRANCE,FRAGRANT,GENDER,GRAPHIC,GRAPHICS,INTERNAL,LENS,MASS,MATERIAL,MEMORY,MOTIVE,NAME,NETWORK,OS,OUTPUT,POWER,PROCESSOR,QUANTITY,QUOTA,RAM,RESOLUTION,SHAPE,SIZE,SPEC,SPEED,STORAGE,STRENGTH,TECHNOLOGY,THEME,TYPE,USB,VIDEO,VOLTAGE,VOLUME,YEAR,ZOOM]
# unnecessary if label_level=1 [ORG,PER,LOC]

labeling_level=word
# string: word/char
# for English: （word: hello），（char: h）
# for Chinese: （word: 你好），（char: 你）

measuring_metrics=[precision,recall,f1,accuracy]
# string: accuracy|precision|recall|f1
# f1 is compulsory
################ Model Configuration ################
use_crf=True

cell_type=LSTM
# LSTM, GRU
biderectional=True
encoder_layers=1

embedding_dim=250
#int, must be consistent with `token_emb_dir' file (69/437)

hidden_dim=250

max_sequence_length=500
#int, cautions! set as a LARGE number as possible, (69/437)
# this will be kept during training and inferring, text having length larger than this will be truncated.

use_self_attention=True
attention_dim=500
# unnecessary if use_self_attention=False (69/437)

CUDA_VISIBLE_DEVICES=0
# coincides with tf.CUDA_VISIBLE_DEVICES

seed=42

################ Training Settings ###
epoch=10
batch_size=32
# integer: 32/64/128/256/512/1024

dropout=0.5
learning_rate=0.001
#lr_decay=0.05

optimizer=Adam
#string: GD/Adagrad/AdaDelta/RMSprop/Adam

checkpoints_max_to_keep=3
print_per_batch=2

is_early_stop=True
patient=15
# unnecessary if is_early_stop=False

checkpoint_name=model

################ Testing Settings ###
output_test_file=test.out

is_output_sentence_entity=True
output_sentence_entity_file=test.entity.out
# unnecessary if is_output_sentence_entity=False


################ Api service Settings ###

ip=0.0.0.0
port=8000
# unnecessary to change if keep these as default.
# unnecessary to add not at api_service mode.
